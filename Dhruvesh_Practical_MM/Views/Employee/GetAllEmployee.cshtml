@model IEnumerable<Dhruvesh_Practical_MM.Models.EmployeeModel>

<td>
    <a asp-action="AddEmployee" asp-controller="Employee" class="btn btn-success">Add New Employee</a>
</td>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>
            <th scope="col">Address</th>
            <th scope="col">State</th>
            <th scope="col">City</th>
            <th scope="col">Created Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="9" class="text-center">No records found</td>
            </tr>
        }
        else
        {
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.c_empid</td>
                    <td>@employee.c_empname</td>
                    <td>@employee.c_empemail</td>
                    <td>@employee.c_empphone</td>
                    <td>@employee.c_empaddress</td>
                    <td>@employee.c_empstate</td>
                    <td>@employee.c_empcity</td>
                    <td>@employee.c_createddate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="UpdateEmployee" asp-controller="Employee" asp-route-id="@employee.c_empid" class="btn btn-primary">Update</a>
                        <a asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@employee.c_empid" class="btn btn-danger" onclick="return DeleteEmployee()">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section scripts
{
    <script>
        function DeleteEmployee() {
            return confirm("Are you sure you want to delete this employee?");
        }
    </script>
}
